
@{
    ViewBag.Title = "Statistik";
}
<style>
    .GroßeLeere {
        width: 100%;
        height: 100%;
        background-color: whitesmoke;
    }

    .KleinesAuswahlFeld {
        background-color: lightgray;
        width: 100%;
        height: 500px;
        padding: 20%;
    }

    .AuswahlFeld {
        border-style: solid;
        border-color: black;
        border-width: 2px;
        margin: 0;
        padding: 0;
    }

    .overlay {
        height: 0%;
        width: 100%;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        background-color: ghostwhite;
        background-color: ghostwhite;
        overflow-y: hidden;
        transition: 0.5s;
    }

    .overlay-content {
        position: relative;
        top: 25%;
        width: 100%;
        text-align: center;
        margin-top: 30px;
    }

    .overlay a {
        padding: 8px;
        text-decoration: none;
        font-size: 36px;
        color: red;
        display: block;
        transition: 0.3s;
    }

    .StrichGrau {
        border-bottom: solid 1px;
        border-color: lightgray;
    }
</style>

<div id="myNav" class="overlay">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <div class="container">
