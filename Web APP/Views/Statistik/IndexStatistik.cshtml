                    <div class="col-sm-1">100%</div>
                    <div class="col-sm-2">0.00</div>
                
               <br />
           
                    <div class="col-sm-2">Vergleich</div>
                    <div class="col-sm-2">.</div>
                    <div class="col-sm-1">Anzahl</div>
                    <div class="col-sm-2">.</div>
                    <div class="col-sm-2">0.00</div>
                    <div class="col-sm-1">100%</div>
                    <div class="col-sm-2">0.00</div>
               
            </div>
           
        </div>
    </div>
</div>


