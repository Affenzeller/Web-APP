@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-xs-12"> 
            <!--Logo-->
            <img src="~/fonts/AuftrLogo.bmp" alt="IOMLogo" > 
        </div>
        <form class="form-horizontal">
            <div class="col-sm-12 col-xs-12">
                <!--Benutzername-->
                <div class="form-group">
                    <label for="usr">Benutzername:</label>
                    <input type = "text" class="form-control" id="Benutzername">
                </div>
            </div>
            <div class="col-sm-12 col-xs-12">
                <!--Passwort-->
                <div class="form-group">
                    <label for="pwd">Passwort:</label>
                    <input type = "password" class="form-control" id="passwort">
                </div>
            </div>
            <div class="col-sm-12 col-xs-12">
                <!--Button Login-->
                <div class="col-lg-6">
                    <a href="@Url.Action("Index", "Home")">
                        <input type="button" class="btn btn-primary btn-lg" value="Login" />
                    </a>
                </div>
                
            </div>
        </form>
    </div>
</div>







